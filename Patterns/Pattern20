n = int(input())
spaces = 2*n-2
for i in range(1,2*n):
   
    if i>n:
        stars = 2*n-i
    else: stars = i
    for j in range(1,stars+1):
        print("*",end='')
    for k in range(1,spaces+1):
        print(" ",end='')
    
    for j in range(1,stars+1):
        print("*",end='')
    print()
    if i<n:
        spaces-=2
    else:
        spaces+=2
    
